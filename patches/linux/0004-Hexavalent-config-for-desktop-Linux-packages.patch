From 2f9f3ecbe3c2a852a9d595d201c9d039a156741c Mon Sep 17 00:00:00 2001
From: Zoraver Kang <Zoraver@users.noreply.github.com>
Date: Sat, 16 Apr 2022 22:57:35 -0400
Subject: [PATCH] Hexavalent config for desktop Linux packages

---
 chrome/installer/linux/BUILD.gn               |  2 +-
 .../chromium-browser.appdata.xml              | 32 +++++++++----------
 .../chromium-browser/chromium-browser.info    | 16 +++++-----
 3 files changed, 24 insertions(+), 26 deletions(-)

diff --git a/chrome/installer/linux/BUILD.gn b/chrome/installer/linux/BUILD.gn
index c0d81d6ffb964..cb4439b278cfb 100644
--- a/chrome/installer/linux/BUILD.gn
+++ b/chrome/installer/linux/BUILD.gn
@@ -459,7 +459,7 @@ template("linux_package") {
   if (is_chrome_branded) {
     package = "google-chrome"
   } else {
-    package = "chromium-browser"
+    package = "hexavalent-browser"
   }
 
   deb_target_name = "${target_name}_deb"
diff --git a/chrome/installer/linux/common/chromium-browser/chromium-browser.appdata.xml b/chrome/installer/linux/common/chromium-browser/chromium-browser.appdata.xml
index e46c2624f38ff..9d3ff707dd188 100644
--- a/chrome/installer/linux/common/chromium-browser/chromium-browser.appdata.xml
+++ b/chrome/installer/linux/common/chromium-browser/chromium-browser.appdata.xml
@@ -1,28 +1,26 @@
 <!-- Copyright 2017 The Chromium Authors -->
 <?xml version="1.0" encoding="UTF-8"?>
 <component type="desktop">
-  <id>chromium-browser.desktop</id>
-  <update_contact>chromium-dev@chromium.org</update_contact>
+  <id>hexavalent-browser.desktop</id>
+  <update_contact>hexavalent@flawed.world</update_contact>
   <metadata_license>CC0-1.0</metadata_license>
   <project_license>BSD-3-Clause and LGPL-2.1+ and Apache-2.0 and IJG and MIT and GPL-2.0+ and ISC and OpenSSL and (MPL-1.1 or GPL-2.0 or LGPL-2.0)</project_license>
-  <name>Chromium Web Browser</name>
-  <summary>The web browser from Chromium project</summary>
+  <name>Hexavalent</name>
+  <summary>The web browser from Hexavalent project</summary>
   <description>
     <p>
-    Chromium is an open-source browser project that aims to build a safer, faster,
-    and more stable way to experience the web.
+    Hexavalent is a private and secure browser based on existing security research.
+    We're focused on hardening Chromium with a series of patches, some of which come
+    directly from other security-oriented projects.
     </p>
     <p>
-    We invite you to join our effort to build a powerful platform for developing a
-    new generation of web applications.
-    </p>
-    <p>
-    Chromium supports Vorbis, Theora, WebM and HTML5 audio and video standards, but
-    does not include the non-free AAC, H.264, MP3 or Adobe Flash code that is found
-    in Chrome.
+    Aimed at real people. We've invested in defenses for real threat models and
+    won't accept security theatre. One of our objectives is to develop security
+    while providing a good user experience, with hardening that doesn't get in the
+    way.
     </p>
   </description>
-  <url type="homepage">https://www.chromium.org/Home</url>
+  <url type="homepage">https://hexavalent.org/</url>
   <screenshots>
     <screenshot type="default">
       <image>https://www.gstatic.com/chrome/appstream/chrome-2.png</image>
@@ -30,7 +28,7 @@
     </screenshot>
   </screenshots>
   <translation/>
-  <developer_name>The Chromium Authors</developer_name>
-  <url type="bugtracker">https://www.chromium.org/for-testers/bug-reporting-guidelines</url>
-  <url type="help">https://chromium.googlesource.com/chromium/src/+/main/docs/linux/debugging.md</url>
+  <developer_name>The Hexavalent Authors</developer_name>
+  <url type="bugtracker">https://github.com/Hexavalent-Browser/Hexavalent/issues</url>
+  <url type="help">https://docs.hexavalent.org/</url>
 </component>
diff --git a/chrome/installer/linux/common/chromium-browser/chromium-browser.info b/chrome/installer/linux/common/chromium-browser/chromium-browser.info
index b02a49c4d44d9..fd918f186a211 100644
--- a/chrome/installer/linux/common/chromium-browser/chromium-browser.info
+++ b/chrome/installer/linux/common/chromium-browser/chromium-browser.info
@@ -6,7 +6,7 @@
 # chromium-browser packages for various platforms.
 
 # Base name of the package.
-PACKAGE="chromium-browser"
+PACKAGE="hexavalent-browser"
 
 # Base name of the snap package
 SNAPNAME="chromium"
@@ -15,22 +15,22 @@ SNAPNAME="chromium"
 PROGNAME=chrome
 
 # Base directory for package installation.
-INSTALLDIR=/opt/chromium.org/chromium
+INSTALLDIR=/opt/hexavalent
 
 # Directory for device policy enrollments.
 ENROLLMENTDIR=/etc/chromium/policies/enrollment
 
 # Display string for desktop menu/icon.
-MENUNAME="Chromium Web Browser"
+MENUNAME="Hexavalent"
 
 # Brief package description.
-SHORTDESC="The web browser from Chromium.org"
+SHORTDESC="The web browser from Hexavalent.org"
 
 # Detailed package description.
-FULLDESC="Chromium is a browser that combines a minimal design with sophisticated technology to make the web faster, safer, and easier."
+FULLDESC="Hexavalent is a private and secure browser based on existing security research. We're focused on hardening Chromium with a series of patches, some of which come directly from other security-oriented projects."
 
 # Package maintainer information.
 # TODO(mmoss) Setup a mailbox for this address
-MAINTNAME="Chromium Linux Team"
-MAINTMAIL="chromium-linux-packager@chromium.org"
-PRODUCTURL="http://www.chromium.org/"
+MAINTNAME="The Hexavalent Authors"
+MAINTMAIL="hexavalent@flawed.world"
+PRODUCTURL="https://hexavalent.org/"
